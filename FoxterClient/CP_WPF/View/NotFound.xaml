<UserControl x:Class="CP_WPF.View.NotFound"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CP_WPF.View"
             mc:Ignorable="d" 
             Height="550"
             Width="auto"
             FontFamily="Modern №20"
             FontSize="80"
             FontWeight="Bold">
    <Viewbox Stretch="Uniform" Margin="0 60 0 0" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <StackPanel VerticalAlignment="Center" Margin="30 0 10 0">
                <TextBlock Text="404" HorizontalAlignment="Center" FontSize="120" />
                <TextBlock Text="{DynamicResource NotFound}"/>
            </StackPanel>
            <Image Source="../Resources/Image/Notfound.png" Width="auto" Height="auto" Margin="0 0 30 20"/>
        </StackPanel>       
    </Viewbox>
</UserControl>
